<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/queryRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/queryCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/queryContainerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/queryTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="This is the question."
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/queryAnswerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:padding="10dp">

                <EditText
                    android:id="@+id/queryCustomAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Custom Answer"
                    android:textSize="14sp"
                    android:gravity="center_vertical|center_horizontal" />

                <EditText
                    android:id="@+id/queryLinkField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Custom Link"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/queryAnswerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer"
                    android:layout_gravity="right"
                    style="?android:attr/buttonBarButtonStyle"
                    android:gravity="right|center_vertical|center_horizontal" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>